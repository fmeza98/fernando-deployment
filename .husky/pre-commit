#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

npm run lint
npm test

#!/bin/bash

# Protect master from accidental commits.
echo -e "===\n>> Talenavi Pre-commit Hook:: Checking branch name / Mengecek nama branch..."
branchName=$(git branch | grep '*' | sed 's/* //')

if [ $branchName == 'main' ]
then
  echo -e "\nðŸš« Commit directly to main branch is not allowed! / Commit langsung ke branch master dilarang!\n" && exit 1
fi

if [ $branchName == 'master' ]
then
  echo -e "\nðŸš« Commit directly to master branch is not allowed! / Commit langsung ke branch master dilarang!\n" && exit 1
fi

if [ $branchName == 'develop' ]
then
  echo -e "\nðŸš« Commit directly to develop branch is not allowed! / Commit langsung ke branch master dilarang!\n" && exit 1
fi

echo -e ">> Finish checking branch name / Selesai mengecek nama branch.\n==="

exit 0
